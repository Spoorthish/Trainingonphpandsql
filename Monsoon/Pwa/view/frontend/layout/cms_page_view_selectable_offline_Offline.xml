<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <meta name="robots" content="NOINDEX,NOFOLLOW"/>
    </head>
    <body>
        <referenceContainer name="header.container" remove="true" />
        <referenceBlock name="breadcrumbs" remove="true" />
        <referenceBlock name="top.links" remove="true" />
        <referenceBlock name="navigation.sections" remove="true" />
        <referenceBlock name="form.subscribe" remove="true" />
        <referenceContainer name="page.wrapper">
            <container name="header.container.offline" before="-" htmlTag="header" htmlClass="page-header offline">
                <container name="header.content.offline" htmlTag="div" htmlClass="header content">
                    <block class="Magento\Theme\Block\Html\Header\Logo" name="logo" template="Monsoon_Pwa::html/offline-logo.phtml"/>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
